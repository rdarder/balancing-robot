<robot name="segway">
    <!-- Chassis -->
    <link name="chassis">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="0.026" />
            <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <box size="0.08 0.022 0.09" />
            </geometry>
            <material name="grey">
                <color rgba="0.5 0.5 0.5 0.8" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" />
            <geometry>
                <box size="0.08 0.022 0.09" />
            </geometry>
        </collision>
    </link>

    <!-- Left Wheel -->
    <link name="left_wheel">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="0.017" />
            <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.027" length="0.012" />
            </geometry>
            <material name="black">
                <color rgba="0 0 0 0.8" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.027" length="0.012" />
            </geometry>
            <lateralFriction value="2.0" />
            <spinningFriction value="0.005" />
            <rollingFriction value="0.0001" />
        </collision>
    </link>

    <!-- Right Wheel -->
    <link name="right_wheel">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="0.017" />
            <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.027" length="0.012" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.027" length="0.012" />
            </geometry>
            <lateralFriction value="2.0" />
            <spinningFriction value="0.005" />
            <rollingFriction value="0.0001" />
        </collision>
    </link>

    <joint name="left_wheel_joint" type="continuous">
        <parent link="chassis" />
        <child link="left_wheel" />
        <origin xyz="-0.048 0 -0.021" rpy="0 1.5708 0" />
        <axis xyz="1 0 0" />
    </joint>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="chassis" />
        <child link="right_wheel" />
        <origin xyz="0.048 0 -0.021" rpy="0 1.5708 0" />
        <axis xyz="1 0 0" />
    </joint>
</robot>