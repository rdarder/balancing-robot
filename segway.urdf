<robot name="segway">
    <!-- Chassis -->
    <link name="chassis">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="0.0026" />
            <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <box size="0.08 0.022 0.09" />
            </geometry>
            <material name="grey">
                <color rgba="0.5 0.5 0.5 0.8" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" />
            <geometry>
                <box size="0.08 0.022 0.09" />
            </geometry>
        </collision>
    </link>
    <link name="battery">
        <inertial>
            <mass value="0.047" />
            <origin xyz="0 0 0" />
            <inertia ixx="0.00002" ixy="0" ixz="0" iyy="0.00002" iyz="0" izz="0.000002" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.009" length="0.065" />
            </geometry>
            <material name="green">
                <color rgba="1 0 0 0.8" />
            </material>

        </visual>
    </link>
    <joint name="battery_on_chassis" type="fixed">
        <parent link="chassis" />
        <child link="battery" />
        <origin xyz="0 0 -0.032" rpy="0 1.5708 0" />
    </joint>

    <link name="left_motor_case">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="0.017" />
            <inertia ixx="0.000001" ixy="0" ixz="0" iyy="0.000001" iyz="0" izz="0.000001" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <box size="0.025 0.015 0.020" />
            </geometry>
            <material name="blue">
                <color rgba="0 0 1 0.8" />
            </material>
        </visual>
    </link>
    <joint name="left_motor_case_joint" type="fixed">
        <parent link="chassis" />
        <child link="left_motor_case" />
        <origin xyz="-0.028 0.001 -0.005" rpy="0 0 0" />
    </joint>

    <link name="right_motor_case">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="0.017" />
            <inertia ixx="0.000001" ixy="0" ixz="0" iyy="0.000001" iyz="0" izz="0.000001" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <box size="0.025 0.015 0.020" />
            </geometry>
            <material name="blue" />
        </visual>
    </link>
    <joint name="right_motor_case_joint" type="fixed">
        <parent link="chassis" />
        <child link="right_motor_case" />
        <origin xyz="0.028 0.001 -0.005" rpy="0 0 0" />
    </joint>


    <!-- Left Wheel -->
    <link name="left_wheel">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="0.017" />
            <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.027" length="0.012" />
            </geometry>
            <material name="black">
                <color rgba="0 0 0 0.8" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.027" length="0.012" />
            </geometry>
            <lateralFriction value="1.0" />
            <spinningFriction value="0.005" />
            <rollingFriction value="0.01" />
        </collision>
    </link>

    <!-- Right Wheel -->
    <link name="right_wheel">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="0.017" />
            <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.027" length="0.012" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.027" length="0.012" />
            </geometry>
            <lateralFriction value="1.0" />
            <spinningFriction value="0.005" />
            <rollingFriction value="0.01" />
        </collision>
    </link>

    <joint name="left_drive" type="continuous">
        <parent link="chassis" />
        <child link="left_wheel" />
        <origin xyz="-0.048 0.001 -0.021" rpy="0 1.5708 0" />
        <axis xyz="0 0 -1" />
    </joint>

    <joint name="right_drive" type="continuous">
        <parent link="chassis" />
        <child link="right_wheel" />
        <origin xyz="0.048 0.001 -0.021" rpy="0 1.5708 0" />
        <axis xyz="0 0 -1" />
    </joint>
</robot>